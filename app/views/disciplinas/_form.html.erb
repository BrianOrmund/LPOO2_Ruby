<%# Esta é uma partial para o formulário de cadastro e edição de
    um disciplina.
    No Rails, partials são templates que podem ser carregados dentro
    de outros templates. Neste caso, estamos usando essa partial para
    não ter que repetir o código do formulário no template de novo
    disciplina e de editar disciplina.
%>

<%# Este form builder constroi um form com os dados do model %>
<%= form_with model: disciplina do |form| %>
    <div>
        <%= form.label :nome %><br>
        <%= form.text_field :nome %>
        <%# Mensagem de erro embutida do Rails %>
        <% disciplina.errors.full_messages_for(:nome).each do |msg| %>
            <div><%= msg %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :ementa %><br>
        <%= form.text_field :ementa %><br>
        <% disciplina.errors.full_messages_for(:ementa).each do |msg| %>
            <div><%= msg %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>
